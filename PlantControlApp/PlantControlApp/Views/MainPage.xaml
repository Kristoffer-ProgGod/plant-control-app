<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:PlantControlApp.Views"
       x:Class="PlantControlApp.Views.MainPage"
       Padding="0,40,0,0"
       IconImageSource="hamburger.png"
       Title="Personal Organiser">
    <FlyoutItem Title="LookAtThisGraph" Icon="GraphIcon.png">
        <ShellContent Route="DataView" ContentTemplate="{DataTemplate local:DataView}" />
    </FlyoutItem>
    <FlyoutItem Title="Create Pairing" Icon="Pairing.png">
        <ShellContent Route="PairingView" ContentTemplate="{DataTemplate local:PairingView}" />
    </FlyoutItem>
    <FlyoutItem Title="Plants" Icon="PlantListIcon.png">
        <ShellContent Route="PlantView" ContentTemplate="{DataTemplate local:PlantView}">
            <TabBar>
                <ShellContent Route="CreatePlantView" ContentTemplate="{DataTemplate local:CreatePlantView}" />
            </TabBar>
        </ShellContent>
    </FlyoutItem>
</Shell>