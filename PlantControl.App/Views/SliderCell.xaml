<?xml version="1.0" encoding="utf-8"?>

<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="PlantControlApp.Views.SliderCell">

    <StackLayout Orientation="Horizontal" Margin="10">
        <Label x:Name="InfoLabel" WidthRequest="200" VerticalOptions="Center" />
        <Label x:Name="ValueLabel" WidthRequest="50" />
        <Slider x:Name="ValueSlider" WidthRequest="150" Maximum="100" />
    </StackLayout>
</ViewCell>